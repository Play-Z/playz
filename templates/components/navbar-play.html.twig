<style>
    .divider {
        border-left: 2px ghostwhite solid;
    }
    .dropdown {
        position: relative;
        display: inline-block;
    }
    .dropdown button {
        display: flex;
        align-items: center;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        min-width: 500px;
        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
        z-index: 1;
    }


    .dropdown-content a {
        text-decoration: none;
        display: block;
    }

    .dropdown:hover .dropdown-content {
        display: flex;
        align-items: center;
    }
    .dropdown-content > div {
        width: 100%;
    }
    .dropdown-content > div > p {
        text-align: center;

    }

</style>
