{% use 'tailwind_2_layout.html.twig' %}

{% block form_row %}
    {% set row_class = row_class|default('w-full md:w-1/2 px-3 mb-6 md:mb-0 ...') %}
    {{ parent() }}
{% endblock form_row %}

{%- block form_label -%}
    {%- set label_attr = label_attr|merge({ class: label_attr.class|default(label_class|default('block text-gray-800')) }) -%}
    {{- parent() -}}
{%- endblock form_label -%}

{% block form_widget %}
    {% set widget_class = widget_class|default('w-full p-4 text-sm bg-gray-50 focus:outline-none border border-gray-200 rounded text-gray-600 ...') %}
    {{ parent() }}
{% endblock form_widget %}