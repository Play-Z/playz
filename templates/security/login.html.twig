{% extends 'baseTemplate/registration-base.html.twig' %}

{% set page_title = 'Connexion' %}

 {% block content %} 
    <section class="h-full gradient-form bg-gray-200 md:h-screen">
    <div class="container py-12 px-6 h-full">
        <div class="flex justify-center items-center flex-wrap h-full g-6 text-gray-800">
        <div class="xl:w-10/12">
            <div class="block bg-white shadow-lg rounded-lg">
            <div class="lg:flex lg:flex-wrap g-0">
                <div class="lg:w-6/12 px-4 md:px-0">
                <div class="md:p-12 md:mx-6">
                    <div class="text-center">
                    <img
                        class="mx-auto w-48"
                        src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                        alt="logo"
                    />
                
                    </div>
                    <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                            <h4 class="text-xl font-semibold mt-1 mb-12 pb-1">Connexion</h4>
                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success" role="alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    <p class="mb-4">Renseignez vos identifiants</p>
                    <div class="mb-4">
                        <input
                        name="email" 
                        type="text"
                        class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        id="inputEmail"
                        value="{{ last_username }}"
                        placeholder="Username"
                        autocomplete="email"
                    required autofocus />    
                    </div>
                    <div class="mb-4">
                        <input
                        name="password"
                        type="password"
                        class="form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none"
                        id="inputPassword"
                        placeholder="Password"
                        autocomplete="current-password"
                    required />    
                    </div>
                     <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                    <div class="text-center pt-1 mb-12 pb-1">
                        <button
                        class="inline-block px-6 py-2.5 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out w-full mb-3"
                        type="submit"
                        data-mdb-ripple="true"
                        data-mdb-ripple-color="light"
                        style="
                            background: linear-gradient(
                            to right,
                            #845ec2,
                            #d65db1,
                            #ff6f91,
                            #ff9671,
                            #ffc75f,
                            #f9f871
                            );
                        "
                        >
                        Se Connecter
                        </button>
                        <a class="text-gray-500" href="/reset-password">Mot de passe oubliÃ© !</a>
                    </div>
                    <div class="flex items-center justify-between pb-6">
                        <p class="mb-0 mr-2">Pas encore inscrit ? Par ici ðŸ‘‰</p>
                        <button
                        type="button"
                        class="inline-block px-6 py-2 border-2 border-red-600 text-red-600 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
                        data-mdb-ripple="true"
                        data-mdb-ripple-color="light"
                        >
                        <a href="/register"> Let's go !</a>
                        </button>
                    </div>
                    </form>
                </div>
                </div>
                <div
                class="lg:w-6/12 flex items-center lg:rounded-r-lg rounded-b-lg lg:rounded-bl-none"
                style=" background-image: linear-gradient(to right top, #d16ba5, #c777b9, #ba83ca, #aa8fd8, #9a9ae1, #8aa7ec, #79b3f4, #69bff8, #52cffe, #41dfff, #46eefa, #5ffbf1);"
                >
                <div class="text-white px-4 py-6 md:p-12 md:mx-6">
                    <h4 class="text-xl font-semibold mt-1 mb-12 pb-1">Entrez dans l'histoire avec PlayZ !</h4>
