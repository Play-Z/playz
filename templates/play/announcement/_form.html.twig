{% if app.session.flashbag.has('success') %}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Succes !</strong>
        <span class="block sm:inline">{{ app.session.flashbag.get('success')|first }}</span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
        </span>
    </div>
{% endif %}
{% if app.session.flashbag.has('error') %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <strong class="font-bold">Erreur !</strong>
        <span class="block sm:inline">{{ app.session.flashbag.get('error')|first }}</span>
        <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
    </span>
    </div>
{% endif %}

<div>
  <div class="md:grid md:grid-cols-2 mx-auto md:gap-6">
    <div class=" md:mt-0 md:col-span-2 mx-auto my-20 shadow-2xl w-1/2">
      <div class="px-4  mr-5 ml-5">
        {% if form.vars.value.id %}
            <p class="text-red-600 text-base">Mettez les informations utiles pour l'annonce que vous êtes en train de créer. Elles seront partagés publiquement.</p>
        {% else %}
            <p class="text-red-600 text-base">Mettez les informations utiles pour l'annonce que vous êtes en train de modifier. Elles seront partagés publiquement.</p>
        {% endif %}
      </div>
      <form method="POST">
        {{ form_start(form) }}
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
          <div class="col-span-6 sm:col-span-3">
              <label for="first-name" class="block text-sm font-bold text-gray-700">Nom d'utilisateur</label>
                {{ form_widget(form.title) }}
            </div>
            <div>
              <label for="about" class="block text-sm font-bold text-gray-700"> Description </label>
              <div class="mt-1">
                {{form_widget (form.description)}}
              </div>
              <p class="mt-2 text-sm text-gray-500">Brève description de votre profil.</p>
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-700"> Photo </label>
               {% if form.image == null %}
                    <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
                    <svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                    </span>
                {% else %}
                    <div>
                      {{form_widget(form.image)}}
                    </div>
                {% endif %}
            </div>
            <div class="col-span-6 sm:col-span-3">
              <label for="first-name" class="block text-sm font-bold text-gray-700">Nom d'utilisateur</label>
                {{ form_widget(form.teamAnnouncement) }}
            </div>

            <div class="col-span-6 sm:col-span-3">
              <label for="first-name" class="block text-sm font-bold text-gray-700">Nom d'utilisateur</label>
                {{ form_widget(form.tournamentAnnouncement) }}
            </div>
            
            
            </div>
              <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
                <button class="btn bg-green-500 text-white active:bg-green-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150">{{ button_label|default('Valider') }}</button>
                <a href="{{ path('announcement_index') }}" class="btn bg-indigo-500 text-white active:bg-indigo-600 font-bold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150">Retour</a>
              </div>
            </div>
        </div>
        {{form_end(form)}}
      </form>
    </div>
  </div>
</div>
