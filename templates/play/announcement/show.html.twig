{% extends 'baseTemplate/home-base.html.twig' %}

{% set page_title = 'Annonce (d√©tails)' %}

{% block title %}{{announcement.title}}{% endblock %}

{% block content %}
<h1 class = "text-5xl font-normal leading-normal mt-0 mb-2 text-indigo-500 text-center"> Annonce {{ announcement.title }}</h1>
<div class="p-6 mx-auto w-full max-w-sm bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700 mt-14 mb-14">
    <table class="w-full text-sm text-center text-gray-500 dark:text-gray-400">
            <tbody>
                <tr class="text-center mx-auto mt-10">
                    {% if announcement.path %}
                        <td><img src="{{ vich_uploader_asset(announcement, 'image') }}" class="rounded-t-lg" width="400" height="auto"></td>
                    {% else %}
                        <td>Pas d'image</td>
                    {% endif %}
                <tr>                            
                <tr>
                    <td class="text-center mx-auto mt-20">{{ announcement.description }}</td>
                </tr>
                
            </tbody>
    </table>
    <div class="mx-auto text-center mt-10">
    
        {{ include('play/announcement/_delete_form.html.twig') }}

        <a href="{{ path('announcement_edit', {'id': announcement.id}) }}" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900">Modifier</a> 
        <a href="{{ path('announcement_index') }}" class="mw-auto focus:outline-none text-white bg-indigo-400 hover:bg-indigo-500 focus:ring-4 focus:ring-indigo-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:focus:ring-yellow-900">Retour</a>
    </div>
</div>

    
{% endblock %}
