{% extends 'baseTemplate/play-base.html.twig' %}

{% set page_title = 'Jouer' %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .t-card {background-color: #C4C4C4; text-align: center ; width: 50% ; }
    .t-btn {display: block ; padding: 5px 10px ; background-color: brown }
</style>

<div class="example-wrapper">
    {% if tournaments|length > 0 %}
        {%  for tournament in tournaments %}
            <div class="t-card">
                <div>
                    <p>{{ tournament.name }}</p>
                    <p>{{ tournament.description }}</p>
                </div>
                <div>
                    <img src="" alt="">
                </div>
                <div>
                    <a class="t-btn" href="{{ path('play_tournament', {id : tournament.id  }) }}">plus de d√©tail</a>
                </div>
            </div>


        {% endfor %}
    {% else %}
        <p>No tournament available</p>
    {% endif %}

</div>
{% endblock %}
