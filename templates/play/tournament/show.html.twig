{% extends 'baseTemplate/play-base.html.twig' %}

{% set page_title = 'Tournois' %}

{% block title %}Inscription tournoi!{% endblock %}

{% block content %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .btn {background-color: brown ; display: block ; padding: 5px 10px ; border-radius: 20px ; text-align: center ; width: 20%}
    </style>

    <div class="example-wrapper">
        <h1>{{ tournament.name }}</h1>
        <h2>{{ tournament.description }}</h2>
        <p>Le tournoi à lieu le {{ tournament.startAt | date('d F Y  \\à g:ia') }}</p>
        {% if inscription %}
            {%  if is_granted('ROLE_TEAM_CREATOR') or is_granted('ROLE_TOURNAMENT_ARBITER') %}
                <a class="btn" href="{{ path('play_inscription_tournament', {id : tournament.id , user_slug : app.user.slug}) }}">Inscription</a>
            {% else %}
                <p>Vous ne pouvez pas vous inscrire, demandez à votre chef d'équipe!</p>
                <p>Il est encore temps !</p>
            {% endif %}
        {% else %}
            <p>Les inscriptions sont maintenant fermés</p>
        {% endif %}
    </div>
{% endblock %}
