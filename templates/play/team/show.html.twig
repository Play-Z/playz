{% extends 'baseTemplate/play-base.html.twig' %}

{% block title %}Equipe {{ team.name }}{% endblock %}

{% block content %}
    <h1 class="text-5xl font-normal leading-normal mt-0 mb-2 text-indigo-500">{{ team.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                {% if team.path %}
                    <th>Logo</th>
                    <td><img src="{{ vich_uploader_asset(team, 'logo') }}" width="64" height="auto" alt="Logo de l'équipe {{ team.name }}"></td>
                {% else %}
                    <th>Logo</th>
                    <td>Pas de logo</td>
                {% endif %}
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ team.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Visibilité équipe</th>
                <td>{{ team.public ? 'Publique' : 'Privée' }}</td>
            </tr>
            <tr>
                <th>Membres</th>
                <td>
                    {% for user in team.users %}
                        {{ user.username }},
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_index') }}">Retour</a>

    {% if is_granted('ROLE_USER') %}
        {% if app.user.team is null and team.public %}
            <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_join', {'slug': team.slug}) }}">Rejoindre</a>
        {% endif %}
    {% endif %}

    {% if is_granted('edit', team) %}
    <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_edit', {'slug': team.slug}) }}">Modifier l'équipe</a>
    {% endif %}

    {% if is_granted('ROLE_TEAM_MANAGER') %}
        <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_member_index', {'slug': team.slug}) }}">Modifier les membres de l'équipe</a>
    {% endif %}

    {% if is_granted('ROLE_USER') %}
        {% if app.user.team == team %}
            <a class="btn text-red-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_leave', {'slug': team.slug}) }}">Quitter l'équipe</a>
        {% endif %}
    {% endif %}

    {% if is_granted('delete', team) %}
        {{ include('play/team/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
