{% extends 'baseTemplate/play-base.html.twig' %}

{% block title %}Equipe {{ team.name }}{% endblock %}

{% block content %}
    <h1 class="text-5xl font-normal leading-normal mt-0 mb-2 text-indigo-500">{{ team.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                {% if team.path %}
                    <th>Logo</th>
                    <td><img src="{{ vich_uploader_asset(team, 'logo') }}" width="64" height="auto" alt="Logo de l'équipe {{ team.name }}"></td>
                {% else %}
                    <th>Logo</th>
                    <td>Pas de logo</td>
                {% endif %}
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Ratio</th>
                {% if ratio != null %}
                    <td>{{ ratio }}% Victoire</td>
                {% else %}
                    <td>aucune statistique disponible</td>
                {% endif %}
            </tr>
            <tr>
                <th>Equipe esport officielle</th>
                <td>{{ team.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Visibilité équipe</th>
                <td>{{ team.public ? 'Publique' : 'Privée' }}</td>
            </tr>
            <tr>
                <th>Créateur</th>
                <td><a href="{{ path('user_profile_show', {'slug': team.createdBy.slug}) }}">{{ team.createdBy.username }}</a></td>
            </tr>
            <tr>
                <th>Membres</th>
                <td>
                    {% for user in team.users %}
                        <a href="{{ path('user_profile_show', {'slug': user.slug}) }}">{{ user.username }} </a>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Jeu</th>
                <td>
                {% if team.game is defined and not null %}
                    {% if team.game.path %}
                        <img src="{{ vich_uploader_asset(team.game, 'logo') }}" width="64" height="auto" alt="Logo du jeux {{ team.game.name }}">
                    {% else %}
                        {{ team.game.name }}
                    {% endif %}
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Tournois</th>
                {% for tournament in tournaments %}
                    <tr>
                        {% if tournament.path %}
                            <td><a href="{{ path('play_tournament', {'slug': tournament.slug}) }}"><img src="{{ vich_uploader_asset(tournament, 'logo') }}" width="64" height="auto" alt="Logo de {{ tournament.name }}"></a></td>
                        {% else %}
                            <td>Pas de logo</td>
                        {% endif %}
                        <td><a href="{{ path('play_tournament', {'slug': tournament.slug}) }}">{{ tournament.name }}</a></td>
            </tr>
                {% else %}
                    <tr>
                        <td colspan="8">Cette équipe n'a participer à aucun tournoi</td>
                    </tr>
                {% endfor %}
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team.description }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ team.location|country_name }}</td>
            </tr>
            <tr>
                <th>Réseaux sociaux</th>
                <td>
                    <ul style="display: inline-block;">
                        {% if team.twitterUsername %}
                            <li style="display: inline-block; height: 32px; width: 32px;">
                                <a href="https://twitter.com/{{ team.twitterUsername }}">
                                    <img src="/images/social-media/twitter/logo-blue.svg" alt="Logo twitter" />
                                </a>
                            </li>
                        {% endif %}
                        {% if team.twitchUsername %}
                            <li style="display: inline-block; height: 32px; width: 32px;">
                                <a href="https://www.twitch.tv/{{ team.twitchUsername }}">
                                    <img src="/images/social-media/twitch/TwitchGlitchPurple.svg" alt="Logo twitch" />
                                </a>
                            </li>
                        {% endif %}
                        {% if team.redditUsername %}
                            <li style="display: inline-block; height: 32px; width: 32px;">
                                <a href="https://www.reddit.com/user/{{ team.redditUsername }}">
                                    <img src="/images/social-media/reddit/Reddit_Mark_OnWhite.png" alt="Logo reddit" />
                                </a>
                            </li>
                        {% endif %}
                        {% if team.discordServerToken %}
                            <li style="display: inline-block; height: 32px; width: 32px;">
                                <a href="https://discord.gg/{{ team.discordServerToken }}">
                                    <img src="/images/social-media/discord/Discord-Logo-Color.svg" alt="Logo discord" />
                                </a>
                            </li>
                        {% endif %}
                        {% if team.youtubeUsername %}
                            <li style="display: inline-block; height: 32px; width: 32px;">
                                <a href="https://www.youtube.com/c/{{ team.youtubeUsername }}">
                                    <img src="/images/social-media/youtube/youtube_social_icon_red.png" alt="Logo youtube" />
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_index') }}">Retour</a>

    {% if is_granted('ROLE_USER') %}
        {% if app.user.team is null and team.public %}
            <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_join', {'slug': team.slug}) }}">Rejoindre</a>
        {% endif %}
    {% endif %}

    {% if is_granted('edit', team) %}
    <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_edit', {'slug': team.slug}) }}">Modifier l'équipe</a>
    {% endif %}

    {% if is_granted('ROLE_TEAM_MANAGER') %}
        <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_member_index', {'slug': team.slug}) }}">Modifier les membres de l'équipe</a>
    {% endif %}

    {% if is_granted('ROLE_USER') %}
        {% if app.user.team == team %}
            <a class="btn text-red-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('team_leave', {'slug': team.slug}) }}">Quitter l'équipe</a>
        {% endif %}
    {% endif %}

    {% if is_granted('delete', team) %}
        {{ include('play/team/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
