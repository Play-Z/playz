<!DOCTYPE html>

<title>Team</title>

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ team.description }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ team.logo }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ team.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('team_index') }}">Retour</a>

    <a href="{{ path('team_edit', {'name': team.name}) }}">Modifier</a>

    {{ include('play/team/_delete_form.html.twig') }}
{% endblock %}
