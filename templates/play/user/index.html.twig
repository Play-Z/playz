{% extends 'baseTemplate/play-base.html.twig' %}

{% set page_title = 'Utilisateurs' %}

{% block content %}
    <h1 class="text-5xl font-normal leading-normal mt-0 mb-2 text-indigo-500">Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Username</th>
                <th>Organisation</th>
                <th>Position</th>
                <th>Pays</th>
                <th>Equipe</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.organization }}</td>
                <td>{{ user.organizationPosition }}</td>
                <td>{{ user.country }}</td>
                <td>{{ user.team.name }}</td>
                <td>
                    <a href="{{ path('user_profile_show', {'slug': user.slug}) }}" class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150">Voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun joueur sur PlayZ !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
