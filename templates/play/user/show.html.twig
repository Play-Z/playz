{% extends 'baseTemplate/play-base.html.twig' %}

{% set page_title = 'Profil ' ~ user.username %}

{% block content %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Pr√©nom</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Organisation</th>
                <td>{{ user.organization }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ user.organizationPosition }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ user.country }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('edit', user) %}
    <a href="{{ path('user_profile_edit', {'slug': user.slug}) }}">Modifier</a>
    {% endif %}

{% endblock %}
