{% extends 'baseTemplate/admin-base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block content %}
    <h1 class="text-5xl font-normal leading-normal mt-0 mb-2 text-indigo-500">Utilisateur</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Roles</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>
                {% for role in user.roles %}
                    {{ role }}
                {% endfor %}
                </td>
                <td>
                    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('user_profile_show', {'slug': user.slug}) }}">Afficher</a>
                    <a class="text-green-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('user_edit', {'slug': user.slug}) }}">Modifier</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun utilisateurs trouvés ! </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('user_new') }}">Créer un utilisateur</a>

{% endblock %}
