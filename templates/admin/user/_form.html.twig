              <div>
                <label class="block text-sm font-medium text-gray-700"> Photo de profile</label>
                <div class="mt-1 flex items-center">
                  <span class="inline-block h-12 w-12 rounded-full overflow-hidden bg-gray-100">
                  {% if user.image != null %}
                      <img src="{{ vich_uploader_asset(user, 'image') }}" alt="Photo de profile" class="h-full w-full">
                  {% else %}
                      <img src="{{ asset('/images/profil/playerz.png') }}" alt="Default" class="h-full w-full">
                  {% endif %}
                
