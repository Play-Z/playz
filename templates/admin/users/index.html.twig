{% extends 'baseTemplate/admin-base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <h1 class="text-5xl font-normal leading-normal mt-0 mb-2 text-indigo-500">Utilisateur</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Surnom</th>
            <th>Prénom</th>
            <th>Nom</th>
            <th>Roles</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                {#              <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>#}
                <td>
                    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('users_show', {'id': user.id}) }}">Afficher</a>
                    <a class="text-red-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('users_edit', {'id': user.id}) }}">Modifier</a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucun utilisateurs trouvés ! </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('users_new') }}">Créer un utilisateur</a>

{% endblock %}
