{% extends 'baseTemplate/tournament-base.html.twig' %}

{% set page_title = 'Tournois' %}

{% block title %}Mes tournois{% endblock %}

{% block content %}
    <h1>Tournois par jeu</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Logo</th>
            <th>Name</th>
            <th>Game</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                {% if tournament.path %}
                    <td><img src="{{ vich_uploader_asset(tournament, 'logo') }}" width="64" height="auto" alt="Logo de {{ tournament.name }}"></td>
                {% else %}
                    <td>Pas de logo</td>
                {% endif %}
                <td>{{ tournament.name }}</td>
                <td>
                    {% if tournament.game.path %}
                        <img src="{{ vich_uploader_asset(tournament.game, 'logo') }}" width="64" height="auto" alt="Logo du jeux {{ tournament.game.name }}">
                    {% else %}
                        {{ tournament.game.name }}
                    {% endif %}
                </td>
                <td>

                    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('play_tournament', {'slug': tournament.slug}) }}">Afficher</a>
                    {% if tournament.status == false %}
                        {% if tournament.status is not null %}
                            Le tournoi est terminé.
                        {% endif %}
                    {% endif %}
                    {%  if tournament.status is null %}
                        <a href="{{ path('tournament_cancel',{'slug': tournament.slug}) }}" style="display: block; padding: 2px 5px ; border-radius: 20px ; background-color: red; color: whitesmoke ; text-align: center;">ANNULER</a>
                        <a href="{{ path('tournament_start',{'slug': tournament.slug}) }}" style="display: block; padding: 2px 5px ; border-radius: 20px ; background-color: green; color: whitesmoke ; text-align: center;" >LANCER</a>
                    {% endif %}
                    {% if tournament.status is null or tournament.status == true %}
                        <a href="{{ path('tournament_edit', {'slug': tournament.slug}) }}">Modifier</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Vous n'avez créer aucun tournoi</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="text-indigo-500 background-transparent font-bold uppercase px-3 py-1 text-xs outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150" href="{{ path('tournament_new') }}">Créer un tournoi</a>

{% endblock %}
