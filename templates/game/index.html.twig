{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
    <h1>Jeux</h1>

    <table>
        <thead>
            <tr>
                <th>Logo</th>
                <th>Nom</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td><img src="{{ game.logo }}" width="64" height="auto"></td>
                <td>{{ game.name }}</td>
                <td>{{ game.description }}</td>
                <td>
                    <a href="{{ path('game_show', {'id': game.id}) }}">Afficher</a>
                    <a href="{{ path('game_edit', {'id': game.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun jeux trouvés !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('game_new') }}">Créer un jeu</a>

{% endblock %}
