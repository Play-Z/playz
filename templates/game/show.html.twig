{% extends 'base.html.twig' %}

{% block title %}Game{% endblock %}

{% block body %}
    <h1>Game</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Logo</th>
                <td><img src="{{ game.logo }}" width="64" height="auto"></td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ game.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('game_index') }}">Retour</a>

    <a href="{{ path('game_edit', {'id': game.id}) }}">Modifier</a>

    {{ include('game/_delete_form.html.twig') }}
{% endblock %}
